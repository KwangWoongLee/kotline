<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="120dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="11dp"
            android:layout_width="11dp"
            android:src="@color/colorAccent"
            app:civ_border_color="#000000"
            app:civ_border_width="0.5dp"
            android:id="@+id/state"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_call" app:layout_constraintStart_toEndOf="@+id/name"
            android:layout_marginStart="168dp" app:layout_constraintVertical_bias="0.51"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="100dp"
            android:layout_width="94dp"
            android:src="@color/colorAccent"

            app:civ_border_color="#000000"
            app:civ_border_width="0.5dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/photo"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/photo" android:layout_marginStart="16dp" android:textStyle="bold"
            android:textSize="18sp"/>
    <Button
            android:text="호출"
            android:layout_width="119dp"
            android:layout_height="28dp"
            android:id="@+id/btn_call"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/photo" android:layout_marginStart="16dp"
            app:layout_constraintVertical_bias="0.473" app:layout_constraintTop_toBottomOf="@+id/name"
            android:background="@drawable/button_background"
            android:textSize="14sp" android:textColor="@android:color/white"/>
    <Button
            android:text="삭제"
            android:layout_width="119dp"
            android:layout_height="28dp"
            android:id="@+id/btn_call2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/photo" android:layout_marginStart="144dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:background="@drawable/button_background_white"
            android:textSize="14sp" android:textColor="@android:color/black"/>
</android.support.constraint.ConstraintLayout>